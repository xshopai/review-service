{
  "name": "review-service",
  "version": "1.0.0",
  "description": "xshopai Review and Rating Service",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "start:dapr": "dapr run --app-id review-service --app-port 1010 --dapr-http-port 3500 --dapr-grpc-port 50001 --log-level warn --config ./.dapr/config.yaml --resources-path ./.dapr/components -- node src/server.js",
    "dev": "dapr run --app-id review-service --app-port 1010 --dapr-http-port 3500 --dapr-grpc-port 50001 --log-level warn --config ./.dapr/config.yaml --resources-path ./.dapr/components -- nodemon src/server.js",
    "debug": "dapr run --app-id review-service --app-port 1010 --dapr-http-port 3500 --dapr-grpc-port 50001 --log-level warn --config ./.dapr/config.yaml --resources-path ./.dapr/components -- node --inspect=9229 src/server.js",
    "test": "node --experimental-vm-modules --no-warnings node_modules/jest/bin/jest.js --runInBand",
    "test:watch": "node --experimental-vm-modules --no-warnings node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules --no-warnings node_modules/jest/bin/jest.js --coverage --runInBand",
    "test:integration": "node --experimental-vm-modules --no-warnings node_modules/jest/bin/jest.js --runInBand tests/integration",
    "test:unit": "node --experimental-vm-modules --no-warnings node_modules/jest/bin/jest.js --runInBand tests/unit",
    "test:e2e": "node --experimental-vm-modules --no-warnings node_modules/jest/bin/jest.js --runInBand tests/e2e",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "review",
    "rating",
    "microservice",
    "nodejs"
  ],
  "author": "xshopai Team",
  "license": "MIT",
  "dependencies": {
    "@dapr/dapr": "^3.6.1",
    "@opentelemetry/auto-instrumentations-node": "^0.69.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.57.2",
    "@opentelemetry/exporter-zipkin": "^2.5.0",
    "@opentelemetry/resources": "^2.5.0",
    "@opentelemetry/sdk-node": "^0.211.0",
    "@opentelemetry/semantic-conventions": "^1.39.0",
    "amqplib": "^0.10.9",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@jest/globals": "^29.6.4",
    "@types/colors": "^1.1.3",
    "axios": "^1.13.2",
    "babel-jest": "^30.1.2",
    "cross-env": "^10.1.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^8.48.0",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1"
  }
}
